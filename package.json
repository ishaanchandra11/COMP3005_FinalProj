{
  "name": "fitness-club-system",
  "version": "1.0.0",
  "description": "Health and Fitness Club Management System",
  "private": true,
  "workspaces": [
    "src",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd src && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd src && npm run build",
    "build:client": "cd client && npm run build",
    "db:generate": "cd src && npx prisma generate",
    "db:push": "cd src && npx prisma db push",
    "db:migrate": "cd src && npx prisma migrate dev",
    "db:studio": "cd src && npx prisma studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

